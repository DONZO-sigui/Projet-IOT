  <!-- Bibliothèques CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <link rel="stylesheet" href="/css/admin.css">

  <style>
    /* Styles pour éviter les débordements */
    .glass-card {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .metric-label {
      font-size: 0.875rem;
      color: #6c757d;
      text-transform: uppercase;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .metric-value {
      font-size: 1.75rem;
      font-weight: 700;
      color: #212529;
      line-height: 1.2;
    }

    .control-panel {
      height: 100%;
    }

    #map {
      height: 400px;
      width: 100%;
      border-radius: 12px;
      z-index: 1;
    }

    @media (max-width: 768px) {
      .metric-value {
        font-size: 1.5rem;
      }

      #map {
        height: 300px;
      }

      .glass-card {
        padding: 1rem;
      }

      .d-flex.gap-2 {
        flex-direction: column;
        gap: 0.5rem !important;
      }
    }

    @media (max-width: 576px) {
      .display-4 {
        font-size: 1.75rem;
      }

      .metric-value {
        font-size: 1.25rem;
      }
    }
  </style>

